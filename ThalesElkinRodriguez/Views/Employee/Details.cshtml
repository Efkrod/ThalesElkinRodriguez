@model Employee

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.id</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.employee_name</dd>
        <dt class="col-sm-2">Salary</dt>
        <dd class="col-sm-10">@Model.employee_salary.ToString("C")</dd>
        <dt class="col-sm-2">Age</dt>
        <dd class="col-sm-10">@Model.employee_age</dd>
        <dt class="col-sm-2">Annual Salary</dt>
        <dd class="col-sm-10">
            @if (ViewBag.AnnualSalaryById != null)
            {
                <td>@((int)ViewBag.AnnualSalaryById).ToString("C")</td>
            }
        </dd>
    </dl>
</div>
